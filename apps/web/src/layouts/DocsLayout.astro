---
import Layout from './Layout.astro';

interface Props {
  title?: string;
}

const { title = 'Documentation' } = Astro.props;

const sidebar = [
  {
    title: 'Getting Started',
    items: [
      { title: 'Introduction', href: '/docs/' },
      { title: 'Installation', href: '/docs/getting-started/' },
    ],
  },
  {
    title: 'Components',
    items: [
      { title: 'Overview', href: '/docs/components/' },
    ],
  },
];
---

<Layout title={`${title} - Hono Next`}>
  <div class="container flex-1">
    <div class="flex-1 md:grid md:grid-cols-[220px_1fr] md:gap-6 lg:grid-cols-[240px_1fr] lg:gap-10">
      <aside class="fixed top-14 z-30 hidden h-[calc(100vh-3.5rem)] w-full shrink-0 overflow-y-auto border-r py-6 pr-2 md:sticky md:block lg:py-10">
        <nav class="relative">
          {sidebar.map((section) => (
            <div class="pb-4">
              <h4 class="mb-1 rounded-md px-2 py-1 text-sm font-medium">
                {section.title}
              </h4>
              <div class="grid grid-flow-row auto-rows-max text-sm">
                {section.items.map((item) => (
                  <a
                    href={item.href}
                    class="group flex w-full items-center rounded-md border border-transparent px-2 py-1 hover:underline"
                  >
                    {item.title}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </nav>
      </aside>
      <main class="relative py-6 lg:gap-10 lg:py-10 xl:grid xl:grid-cols-[1fr_300px]">
        <div class="mx-auto w-full min-w-0">
          <article class="prose prose-slate dark:prose-invert max-w-none">
            <slot />
          </article>
        </div>
      </main>
    </div>
  </div>
</Layout>
