---
import '@fontsource-variable/inter';
import '../styles/base.css';

interface Props {
  title: string;
  description?: string;
}

const { 
  title = "Hono Next Template",
  description = "A modern full-stack monorepo template featuring Hono, Next.js, and Turborepo"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
        <div class="container flex h-14 items-center">
          <div class="mr-4 flex">
            <a class="mr-6 flex items-center space-x-2" href="/">
              <span class="font-bold">Hono Next</span>
            </a>
          </div>
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a href="/docs" class="transition-colors hover:text-foreground/80">Documentation</a>
            <a href="/docs/getting-started" class="transition-colors hover:text-foreground/80">Getting Started</a>
            <a href="/docs/components" class="transition-colors hover:text-foreground/80">Components</a>
          </nav>
        </div>
      </header>
      <div class="flex-1">
        <slot />
      </div>
      <footer class="py-6 md:px-8 md:py-0">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
          <p class="text-center text-sm leading-loose text-muted-foreground md:text-left">
            Built by{" "}
            <a
              href="https://github.com/agustinl"
              target="_blank"
              rel="noreferrer"
              class="font-medium underline underline-offset-4"
            >
              agustinl
            </a>
            . The source code is available on{" "}
            <a
              href="https://github.com/agustinl/hono-next"
              target="_blank"
              rel="noreferrer"
              class="font-medium underline underline-offset-4"
            >
              GitHub
            </a>
            .
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
